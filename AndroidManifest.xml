<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cctb.spmspl_scheduler"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cctb.spmspl_scheduler.Welcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cctb.spmspl_scheduler.LoadSchedule"
            android:label="@string/title_activity_load_schedule" >
        </activity>
        <activity
            android:name="com.cctb.spmspl_scheduler.ScheduleView"
            android:label="@string/title_activity_schedule_view" >
        </activity>
        <activity
            android:name="com.cctb.spmspl_scheduler.GameView"
            android:label="@string/title_activity_game_view" >
        </activity>
        <activity 
            android:name="com.cctb.spmspl_scheduler.Preferences" 
            android:label="@string/title_preferences">
			<intent-filter>
				<action android:name="com.cctb.spmspl_scheduler.Preferences" />
				<category android:name="android.intent.category.DEFAULT" /> 
			</intent-filter>
		</activity>
    </application>

</manifest>